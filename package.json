{
  "name": "defender-game",
  "version": "1.0.0",
  "description": "Browser based space defender game",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --mode development --open --hot",
    "build": "webpack --mode production && npm run babel-build",
    "dev": "webpack --mode development --watch",
    "prod": "webpack --mode production",
    "babel-build": "babel src -d dist/src --copy-files",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/defender-game.git"
  },
  "keywords": [
    "game"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/preset-env": "^7.20.2",
    "@eslint/js": "^9.39.2",
    "babel-jest": "^30.2.0",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.3",
    "eslint": "^8.57.1",
    "eslint-plugin-jest": "^28.12.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "core-js": "^3.29.1",
    "regenerator-runtime": "^0.13.11"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/health.js",
      "src/sortCharacters.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "src/health.js": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      },
      "src/sortCharacters.js": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "transform": {},
    "moduleFileExtensions": ["js", "json"],
    "verbose": true
  }
}