{
  "name": "defender-game",
  "version": "1.0.0",
  "description": "Browser based space defender game",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --mode development --open --hot",
    "build": "webpack --mode production && npm run babel-build",
    "dev": "webpack --mode development --watch",
    "prod": "webpack --mode production",
    "babel-build": "babel src -d dist/src --copy-files",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --coverage",
    "test:all": "jest --coverage --collectCoverageFrom=src/health.js,src/game/entities/Character.js,src/sortCharacters.js,src/getLevel.js,src/getSpecialAttacks.js",
    "test:health": "jest src/tests/health.test.js --coverage --collectCoverageFrom=src/health.js",
    "test:character": "jest src/tests/Character.test.js --coverage --collectCoverageFrom=src/game/entities/Character.js,src/game/entities/Bowerman.js,src/game/entities/Swordsman.js,src/game/entities/Magician.js,src/game/entities/Daemon.js,src/game/entities/Undead.js,src/game/entities/Zombie.js",
    "test:sort": "jest src/tests/sortCharacters.test.js --coverage --collectCoverageFrom=src/sortCharacters.js",
    "test:getLevel": "jest src/tests/getLevel.test.js --coverage --collectCoverageFrom=src/getLevel.js",
    "test:getSpecialAttacks": "jest src/tests/getSpecialAttacks.test.js --coverage --collectCoverageFrom=src/getSpecialAttacks.js",
    "test:coverage": "jest --coverage",
    "test:full": "npm run lint && npm test",
    "coverage:report": "npm test && open coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmak1/defender-game.git"
  },
  "keywords": ["game"],
  "author": "nmak1",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/plugin-transform-modules-commonjs": "^7.21.0",
    "@babel/preset-env": "^7.21.0",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.2",
    "babel-plugin-istanbul": "^7.0.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.0"
  },
  "dependencies": {
    "core-js": "^3.29.0",
    "regenerator-runtime": "^0.13.11"
  }
}